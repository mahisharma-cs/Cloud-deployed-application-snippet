<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">

		<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="#939393">

		</FrameLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/tv_place_product"
				android:layout_width="170dp"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:fontFamily="@font/ubuntu_medium"
				android:paddingLeft="10dp"
				android:text="ProductNameDKMartProductNameDKMartProductNameDKMart"
				android:textColor="#424242"
				android:textSize="15dp" />

			<LinearLayout
				android:layout_width="90dp"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:orientation="vertical">

				<TextView
					android:id="@+id/tv_place_quantity"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:fontFamily="@font/ubuntu_medium"
					android:text="1 pack"
					android:textColor="#424242"
					android:textSize="15dp" />

				<TextView
					android:id="@+id/tv_place_pack"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:fontFamily="@font/ubuntu_medium"
					android:text="Quantity"
					android:textColor="#424242"
					android:textSize="15dp" />


			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:orientation="vertical">


				<TextView
					android:id="@+id/tv_place_price"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_gravity="right"
					android:fontFamily="@font/ubuntu_medium"
					android:paddingRight="10dp"
					android:text="â‚¹ Price/-"
					android:textColor="#424242"
					android:textSize="15dp" />

			</LinearLayout>


		</LinearLayout>


	</LinearLayout>
</androidx.cardview.widget.CardView>