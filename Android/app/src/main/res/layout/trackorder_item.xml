<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:outlineSpotShadowColor="#000000"
    android:outlineAmbientShadowColor="#000000"
    app:cardCornerRadius="20sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_image_frame">

            <ImageView
                android:id="@+id/image_product_trackorder"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_marginRight="5dp"
                android:padding="5dp"
                android:src="@mipmap/ic_launcher"/>

        </FrameLayout>

        <TextView
            android:id="@+id/tv_product_trackorder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubuntu_medium"
            android:padding="1dp"
            android:text="Product Name"
            android:textColor="@android:color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_id_trackorder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubuntu_medium"
            android:padding="1dp"
            android:text="id : DK"
            android:textColor="@android:color/black"
            android:textSize="16dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_pack_trackorder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu_medium"
                android:paddingRight="10dp"
                android:text="1 pack"
                android:textColor="#000000"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_quantity_trackorder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/ubuntu_medium"
                android:padding="1dp"
                android:text="Quantity"
                android:textColor="#000000"
                android:textSize="16dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_price_trackorder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="â‚¹ Price /-"
            android:textSize="16dp"
            android:gravity="right"
            android:fontFamily="@font/ubuntu_medium"
            android:textColor="@android:color/black"
            android:padding="1dp"
            />

        <TextView
            android:id="@+id/tv_payment_trackorder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="Payment"
            android:textSize="16dp"
            android:fontFamily="@font/ubuntu_medium"
            android:textColor="@android:color/black"
            android:padding="1dp"
            />

        <TextView
            android:id="@+id/tv_date_trackorder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="Date"
            android:textSize="16dp"
            android:fontFamily="@font/ubuntu_medium"
            android:textColor="@android:color/black"
            android:padding="1dp"
            />

        <TextView
            android:id="@+id/tv_time_trackorder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="Time"
            android:textSize="16dp"
            android:fontFamily="@font/ubuntu_medium"
            android:textColor="@android:color/black"
            android:padding="1dp"
            />

        <ImageView
            android:id="@+id/image_status_trackorder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:src="@mipmap/ic_launcher"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>